{erl_opts, [debug_info]}.
{deps, [
    {cowlib, ".*",
        {git, "https://github.com/ninenines/cowlib", {tag, "2.7.0"}}}
  , {ranch, ".*",
        {git, "https://github.com/ninenines/ranch", {tag, "1.7.1"}}}
  , {cowboy, ".*",
        {git, "https://github.com/ninenines/cowboy", {tag, "2.6.1"}}}
  , {mongodb, ".*",
        {git, "git://github.com/comtihon/mongodb-erlang", {branch, "master"}}}
  , {jsone, ".*",
        {git, "git://github.com/sile/jsone", {branch, "otp21-rc1"}}}
]}.

{shell, [
    {config, "./config/sys.config"},
    {apps, [dss]}
]}.

{relx, [
    {release, {dss, "0.0.1"},
        [ sasl
        , dss
        , cowlib
        , ranch
        , cowboy
        , mongodb
        , jsone
        ]
    }
  , {dev_mode, true}
  , {include_erts, false}
  , {sys_config, "./config/sys.config"}
  , {extended_start_script, true}
]}.
